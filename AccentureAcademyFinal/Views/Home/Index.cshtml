@{
    ViewBag.Title = "Home Page";
}


<div class="jumbotron">
    <h1>Libreria </h1>
    <p class="lead"></p>
    <p><a href="~/Book/ListarCards" class="btn btn-primary btn-lg">Ver Catalogo</a></p>
</div>


<div class="row">
    <div class="col-sm-4" style="background-color:whitesmoke; border-radius:3px; padding:1em">
        <h2>Agregar</h2>
        <p>Añada su libro a nuestro catalogo</p>
        <a href="~/Book/Agregar" class="btn btn-primary">Ir...</a>
    </div>
    <div class="col-sm-4" style="background-color:whitesmoke; border-radius:3px; padding:1em">
        <h2>Listar</h2>
        <p>Vea nuestra seleccion de libros</p>
        <a href="~/Book/Listar" class="btn btn-primary">Ir...</a>
    </div>
    <div class="col-sm-4" style="background-color:whitesmoke; border-radius:3px; padding:1em">
        <h2>Contacto</h2>
        <p>Informacion extra</p>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Ir...</button>
    </div>
</div>


<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Contacto</h4>
            </div>
            <div class="modal-body">
                <p>Ignaciolaffranconi&#64;gmail.com</p>
                <p>Copyright &copy; Accenture Academy | Todos los derechos reservados</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
            </div>
        </div>

    </div>
</div>